<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/sceletons"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textSize="30dp"
        android:textColor="@color/purple_700"
        android:fontFamily="sans-serif-condensed-medium"
        android:background="#FFEB86"
        android:layout_marginBottom="50dp"
        />

    <GridLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:columnCount="1"
        android:background="#5253BA"
        android:layout_marginBottom="50dp"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="number"
                android:textColorHint="#FFEB86"
                android:textSize="20dp"
                android:backgroundTint="#FFEB86"
                android:id="@+id/etFirstNumber"
                android:layout_marginLeft="55dp"
                android:textColor="#FFEB86"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="number"
                android:textSize="20dp"
                android:textColor="#FFEB86"
                android:textColorHint="#FFEB86"
                android:backgroundTint="#FFEB86"
                android:id="@+id/etSecondNumber"
                android:layout_marginLeft="35dp"

                />
        </LinearLayout>

    </GridLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESULT: "
        android:textSize="25dp"
        android:textColor="@color/purple_700"
        android:fontFamily="sans-serif-condensed-medium"
        android:background="#FFEB86"
        android:layout_marginBottom="50dp"
        android:id="@+id/tvResult"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATE OR PERISH"
        android:backgroundTint="@color/purple_700"
        android:id="@+id/btResult"
        />


</LinearLayout>